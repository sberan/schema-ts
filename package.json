{
  "name": "tjs",
  "version": "5.0.1",
  "description": "a type-level validator for json schema",
  "main": "index.js",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "tsc --declaration",
    "clean": "rimraf \"index.{d.ts,js}\"",
    "prepublishOnly": "npm run build",
    "postpublish": "npm run clean",
    "test-typedefs": "typings-checker --project tsconfig.json test/typedefs.ts",
    "test-mocha": "mocha --require ts-node/register test/*.spec.ts",
    "test": "npm run test-typedefs && npm run test-mocha"
  },
  "devDependencies": {
    "@types/ajv": "1.0.0",
    "@types/mocha": "5.2.7",
    "@types/node": "13.1.6",
    "mocha": "7.0.0",
    "rimraf": "^3.0.0",
    "ts-node": "8.6.1",
    "typescript": "3.7.4",
    "typings-checker": "2.0.0"
  },
  "author": "Sam Beran (sberan@gmail.com)",
  "license": "MIT",
  "dependencies": {
    "ajv": "6.10.2",
    "ts-toolbelt": "6.1.6"
  }
}
